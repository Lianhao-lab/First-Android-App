<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample_main_view_layout">
    <Button
        android:id="@+id/back_bottom_view"
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detail_content_view"
        android:text="Event"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/mean_rate"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="Score"
        android:textColor="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/sample_content_view_fragment"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0px" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_feedback"
        android:layout_width="match_parent"
        android:background="@color/baby_grey"
        android:layout_height="match_parent"/>

</LinearLayout>